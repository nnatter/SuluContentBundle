<?xml version="1.0" encoding="UTF-8"?>
<serializer>
    <class name="Sulu\Bundle\ContentBundle\Model\Content\ContentView" exclusion-policy="ALL">
        <!-- serialize resource-id as id because toolbar-actions of sulu frontend expect an id property -->
        <virtual-property method="getResourceId" serialized-name="id" expose="true"/>
        <virtual-property method="getType" serialized-name="template" expose="true"/>
    </class>
</serializer>
